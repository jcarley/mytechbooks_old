  signin = (username)->
    $('#user_email').val("#{username}@example.com")
    $('#user_password').val('password')
    $('#sign_in_button').click()

  $(document).ready ->
    $("a[name='sign_in_link']").click ->
      username = $(this).attr("data-username")
      signin(username)
